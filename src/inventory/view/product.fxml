<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="500.0" minWidth="980.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory.controller.Products">

      <AnchorPane style="-fx-border-radius: 4; -fx-border-color: #aaaaaa;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <AnchorPane prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">

                  <Label layoutX="107.0" layoutY="60.0" text="Create Product">
                     <font>
                        <Font name="System Bold Italic" size="16.0" />
                     </font>
                  </Label>
                  <VBox layoutY="95.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

                        <HBox alignment="CENTER_LEFT" spacing="25.0">

                              <Label minWidth="70.0" text="ID" />
                              <TextField fx:id="prodIDTextField" disable="true" />

                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="25.0">

                              <Label minWidth="70.0" text="Name" />
                              <TextField fx:id="prodNameTextField" promptText="Product Name" />

                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="25.0">

                              <Label minWidth="70.0" text="Inventory" />
                              <TextField fx:id="prodInvTextField" maxWidth="65.0" promptText="#" />
                           
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="25.0">

                              <Label minWidth="70.0" text="Cost / Unit" />
                              <TextField fx:id="prodCostTextField" maxWidth="65.0" promptText="\$" />

                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="25.0">

                              <Label minWidth="70.0" text="Min" />
                              <TextField fx:id="prodMinTextField" maxWidth="65.0" promptText="#" />
                              <Label text="Max" />
                              <TextField fx:id="prodMaxTextField" maxWidth="65.0" promptText="#" />

                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">

                              <Button minWidth="100.0" mnemonicParsing="false" style="-fx-background-color: black;" text="Save" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Button>
                              <Button cancelButton="true" minWidth="100.0" mnemonicParsing="false" style="-fx-background-color: black;" text="Cancel" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Button>

                           <padding>
                              <Insets top="60.0" />
                           </padding>
                        </HBox>

                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>

            </AnchorPane>
            <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                  <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                        <HBox alignment="CENTER">

                              <TextField fx:id="partSearchTextField" alignment="CENTER" promptText="Part ID or Name" />
                              <Button fx:id="partSearchButton" alignment="CENTER" minWidth="80.0" mnemonicParsing="false" style="-fx-background-color: black;" text="Search" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold Italic" size="13.0" />
                                 </font>
                              </Button>

                        </HBox>
                        <AnchorPane VBox.vgrow="ALWAYS">

                              <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                                    <TableView fx:id="AddPartsTableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn prefWidth="75.0" text="Part ID" />
                                        <TableColumn prefWidth="75.0" text="Name" />
                                          <TableColumn prefWidth="75.0" text="Inventory #" />
                                          <TableColumn prefWidth="75.0" text="Cost / Unit" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <Button fx:id="AddPartButton" alignment="CENTER" minWidth="200.0" mnemonicParsing="false" style="-fx-background-color: black;" text="Add Part" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Button>

                                 <padding>
                                    <Insets bottom="20.0" />
                                 </padding>
                              </VBox>

                        </AnchorPane>
                        <AnchorPane VBox.vgrow="ALWAYS">

                              <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                                    <TableView fx:id="ProductPartsTableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn prefWidth="75.0" text="Part ID" />
                                        <TableColumn prefWidth="75.0" text="Name" />
                                          <TableColumn prefWidth="75.0" text="Inventory #" />
                                          <TableColumn prefWidth="75.0" text="Cost / Unit" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <Button fx:id="RemovePartButton" alignment="CENTER" minWidth="200.0" mnemonicParsing="false" style="-fx-background-color: black;" text="Remove Part" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Button>

                              </VBox>

                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </AnchorPane>

                  </VBox>

               <padding>
                  <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
               </padding>
            </AnchorPane>

      </AnchorPane>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
