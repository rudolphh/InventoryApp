<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="500.0" minWidth="980.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
   <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <Label text="Inventory Management System">
         <font>
            <Font name="System Bold Italic" size="16.0"/>
         </font>
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="30.0"/>
         </VBox.margin>
      </Label>
      <HBox VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="25.0" left="20.0" right="20.0" top="25.0"/>
         </VBox.margin>
         <VBox minHeight="200.0" minWidth="460.0" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5;"
               HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets/>
            </HBox.margin>
            <HBox alignment="CENTER_LEFT">
               <Label text="Parts">
                  <padding>
                     <Insets left="20.0"/>
                  </padding>
                  <font>
                     <Font name="System Bold" size="13.0"/>
                  </font>
               </Label>
               <Region HBox.hgrow="ALWAYS"/>
               <TextField id="searchPartsTextField" fx:id="searchPartTextField" alignment="CENTER_RIGHT"
                          promptText="id or name">
                  <HBox.margin>
                     <Insets/>
                  </HBox.margin>
               </TextField>
               <Button id="searchPartsBtn" fx:id="searchPartBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Search" textAlignment="RIGHT"
                       textFill="WHITE"/>
            </HBox>
            <TableView VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn id="col_partID" fx:id="partIDCol" maxWidth="312.0" minWidth="116.0"
                               prefWidth="-1.0" text="Part ID"/>
                  <TableColumn id="col_partName" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Name"/>
                  <TableColumn id="col_partInventory" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Inventory"/>
                  <TableColumn id="col_partCost" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Cost / Unit"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <VBox.margin>
                  <Insets/>
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
               <Button id="partAddBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Add" textFill="WHITE"/>
               <Button id="partModBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Modify" textFill="WHITE"/>
               <Region HBox.hgrow="ALWAYS"/>
               <Button id="partDelBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Delete" textFill="WHITE"/>
            </HBox>
         </VBox>
         <Region maxWidth="20.0" minWidth="20.0" HBox.hgrow="ALWAYS"/>
         <VBox minHeight="200.0" minWidth="460.0" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5;"
               HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT">
               <Label text="Products">
                  <padding>
                     <Insets left="20.0"/>
                  </padding>
                  <font>
                     <Font name="System Bold" size="13.0"/>
                  </font>
               </Label>
               <Region HBox.hgrow="ALWAYS"/>
               <TextField id="searchProdTextField" fx:id="searchProdTextField" alignment="CENTER_RIGHT"
                          promptText="id or name">
                  <HBox.margin>
                     <Insets/>
                  </HBox.margin>
               </TextField>
               <Button id="searchProdBtn" fx:id="searchProdBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Search" textAlignment="RIGHT"
                       textFill="WHITE"/>
            </HBox>
            <TableView VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn id="col_prodID" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Product ID"/>
                  <TableColumn id="col_prodName" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Name"/>
                  <TableColumn id="col_prodInventory" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Inventory"/>
                  <TableColumn id="col_prodCost" maxWidth="312.0" minWidth="116.0" prefWidth="-1.0"
                               text="Cost / Unit"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
               <Button id="prodAddBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Add" textFill="WHITE"/>
               <Button id="prodModBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Modify" textFill="WHITE"/>
               <Region HBox.hgrow="ALWAYS"/>
               <Button id="prodDelBtn" minWidth="80.0" mnemonicParsing="false"
                       style="-fx-background-color: black;" text="Delete" textFill="WHITE"/>
            </HBox>
         </VBox>
      </HBox>
      <HBox alignment="CENTER_RIGHT">
         <padding>
            <Insets bottom="20.0" right="25.0"/>
         </padding>
         <Button id="exitBtn" minWidth="80.0" mnemonicParsing="false" text="Exit"/>
      </HBox>
   </VBox>
</AnchorPane>
